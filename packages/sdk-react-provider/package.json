{
  "name": "@monerium/sdk-react-provider",
  "version": "0.7.0",
  "private": false,
  "description": "React provider for the Monerium SDK.",
  "repository": {
    "type": "git",
    "url": "https://github.com/monerium/js-monorepo-playground.git",
    "directory": "packages/sdk-react-provider"
  },
  "bugs": {
    "url": "https://github.com/monerium/js-monorepo/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.mjs",
    "dist/index.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --fix",
    "pub:pre": "pnpm publish --no-git-checks --dry-run",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@monerium/sdk": "workspace:*"
  },
  "peerDependencies": {
    "@types/react": "^18.2.61",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0"
  }
}
